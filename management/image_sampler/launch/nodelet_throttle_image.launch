<launch>
  <arg name="name" default="image_throttle_nodelet"/>
  <arg name="manager" default="" />
  <arg name="update_rate" default="3"/>

  <node pkg="nodelet" type="nodelet" name="$(arg name)" args="load image_sampler/NodeletThrottleImage $(arg manager)" output="screen">
    <param name="update_rate" value="$(arg update_rate)"/>
    <remap from="topic_in"  to="/hw/cam_nav"/>
    <remap from="topic_out" to="/hw/cam_nav/throttle"/>
  </node>
</launch>
