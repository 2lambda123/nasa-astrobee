<launch>
  <!-- Arguments -->
  <arg name="bagfile"/>             

  <!-- Set params -->
  <param name="use_sim_time" value="true"/> 

  <!-- Topic Remappings -->
  <remap from="/mgt/img_sampler/nav_cam/image_record" to="/hw/cam_nav"/>

  <!-- Nodes to run -->
  <include file="$(find lk_optical_flow)/launch/lk_optical_flow.launch">
    <arg name="terminal" value="terminator -x"/>
  </include>
  <include file="$(find localization_node)/launch/localization_node.launch">
    <arg name="terminal" value="terminator -x"/>
  </include>
  <include file="$(find graph_localizer)/launch/graph_localizer.launch">
    <arg name="terminal" value="terminator -x"/>
  </include>
  <node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(arg bagfile)"/>

  <!-- Service calls -->
  <!-- Add 'wait' here so nodes are running before the service calls are made -->
  <node pkg="rosservice" type="rosservice" name="imu_calibration" args="call --wait /gnc/ekf/init_bias" /> 
  <node pkg="rosservice" type="rosservice" name="enable_lk_optiocal_flow" args="call --wait /loc/of/enable" /> 
  <node pkg="rosservice" type="rosservice" name="enable_sparse_mapping" args="call --wait /loc/ml/enable" /> 
</launch>
