require "context"

-- Ros Graph VIO (rgv)
--- Whether to use sparse map measurements during initialization or not
rgv_add_sparse_map_measurements_for_initialization = false 
--- How many feature point measurements should pass while adding sparse mapping 
--- measurements after initialization
rgv_feature_point_count_for_sm_initialization = 0
--- Starting state noise
rgv_starting_pose_translation_stddev = 0.02
rgv_starting_pose_quaternion_stddev = 0.01
rgv_starting_velocity_stddev_scale = 1 
rgv_starting_accel_bias_stddev_scale = 1
rgv_starting_gyro_bias_stddev_scale = 1
